<%= render 'layouts/errors', object: @user %>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, value: @user.username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

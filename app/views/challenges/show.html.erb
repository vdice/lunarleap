<div class="row">
  <div class="col-xs-5">
    <!-- Challenge preview -->
    <div id="challenge-render">
      <%= render @challenge %>
    </div>

    <!-- Edit form -->
    <div id="edit-challenge-form"></div>
    <!-- Challenge description -->
    <div id="challenge-description">
      <%= render 'challenge_description' %>
    </div>

    <hr>
    <%= link_to 'Edit', edit_user_challenge_path(@user, @challenge), id: 'edit-challenge-link', remote: true %> |
    <%= link_to 'Delete', user_challenge_path(@user, @challenge),
                          data: {confirm: 'Are you sure?',
                                 method: 'delete'}%>
  </div>

  <div class="col-xs-7">

    <!-- Add update -->
    <h3>
      <%= link_to 'Check in', new_challenge_update_path(@challenge), id: 'new-update-link', remote: true %>
    </h3>
    <div id="new-update-form"></div>

    <!-- Updates listing -->
    <% if @challenge.updates.any? %>
      <h3>Your updates:</h3>
    <% else %>
      <p>
        You don't have any updates, yet!  Are you going to complete your challenge?!
      </p>
    <% end %>

    <%= render 'updates/listing' %>
  </div>
</div>
